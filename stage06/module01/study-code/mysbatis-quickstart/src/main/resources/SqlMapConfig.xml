<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!--环境配置, 配置数据库环境, 启用指定的数据库环境, 当属性default的值跟子节点的id值相同时就表示启用这个数据库环境-->
    <environments default="mybatis_db">
        <environment id="mybatis_db">
            <transactionManager type="JDBC"></transactionManager>
            <!--启用数据库连接池-->
            <dataSource type="POOLED">
                <!--注册jdbc驱动-->
                <property name="driver" value="com.mysql.cj.jdbc.Driver"/>
                <!--数据库的url-->
                <property name="url"
                          value="jdbc:mysql://localhost:3306/mybatis_db"/>
                <!--数据库的登录账号-->
                <property name="username" value="root"/>
                <!--数据库的登录密码-->
                <property name="password" value="Zq12345!"/>
            </dataSource>
        </environment>
    </environments>

    <!--引入mapper文件, 这些被引入的mapper文件中的sql操作才可以在上面启用的数据库环境中使用-->
    <mappers>
        <mapper resource="mappers/UserMapper.xml"/>
    </mappers>
</configuration>