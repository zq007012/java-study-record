<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="userMapper">
    <select id="findAll" resultType="com.zq.domain.User">
        select *
        from user
    </select>

    <insert id="addUser" parameterType="com.zq.domain.User">
        insert into user(username, gender, birthday, address)
        values (#{username}, #{gender}, #{birthday}, #{address})
    </insert>

    <update id="updateUser" parameterType="com.zq.domain.User">
        update user
        set username=#{username},
            birthday=#{birthday},
            gender=#{gender},
            address=#{address}
        where id = #{id}
    </update>

    <delete id="deleteUser" parameterType="com.zq.domain.User">
        delete
        from user
        where id = ${id}
    </delete>
</mapper>